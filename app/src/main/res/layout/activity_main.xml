<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="#83B9E8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="53dp"
            android:layout_height="98dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/unnamed" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="#DFD488"
            android:gravity="center"
            android:text="HỆ THỐNG THÔNG BÁO ĐIỂM TAEDU"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:srcCompat="@drawable/gv" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Quản lý thông báo giáo viên" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="9dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Người nhận"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_tieude"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:hint="Nhập tiêu đề"
        />

    <EditText
        android:id="@+id/edt_noidung"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Nhập nội dung" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_gravity="center"/>
    <ListView
        android:id="@+id/view_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>